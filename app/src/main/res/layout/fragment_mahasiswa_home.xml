<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context=".mahasiswa.MahasiswaHomeFragment">

    <Button
        android:id="@+id/btn_mhs_persyaratan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lengkapi Persyaratan" />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@color/color_black_draker" />

    <Button
        android:id="@+id/btn_mhs_periksa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proses Pemeriksaaan" />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@color/color_black_draker" />

    <Button
        android:id="@+id/btn_mhs_formulir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isi Formulir" />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@color/color_black_draker" />

    <Button
        android:id="@+id/btn_mhs_persetujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menunggu Persetujuan" />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@color/color_black_draker" />

    <Button
        android:id="@+id/btn_mhs_lampiran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Penyerahan Berkas Lampiran" />

</LinearLayout>